<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/gradient_backgorund"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textSize="23dp"
        android:textColor="#defff2"

        android:text="Calculadora de Peso Ideal" />

    <TextView
        android:id="@+id/textView2"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textColor="#defff2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione seu gÃªnero" />

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioButtonTelaCalcPesoMasculino"
            android:checked="false"
            android:fontFamily="sans-serif-black"
            android:textColor="#defff2"
            android:textSize="18dp"
            android:theme="@style/radioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Homem" />

        <RadioButton
            android:id="@+id/radioButtonTelaCAlcPesoFeminino"
            android:checked="false"
            android:fontFamily="sans-serif-black"
            android:textColor="#defff2"
            android:textSize="18dp"
            android:theme="@style/radioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulher" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:textColor="#defff2"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:layout_width="300dp"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:text="Digite sua altura em metros" />

    <EditText
        android:id="@+id/TelaCalcPesoEditTextAltura"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_light_background"
        android:ems="10"
        android:paddingBottom="10dp"
        android:inputType="number"
        android:hint="Ex:  1.80" />


    <LinearLayout
        android:layout_width="275dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonTelaCalcPesoLimpar"
            android:layout_width="125dp"
            android:layout_marginRight="15dp"
            android:textColor="#defff2"
            android:fontFamily="sans-serif-black"
            android:textSize="18dp"
            android:backgroundTint="#0ff4c6"
            android:layout_height="wrap_content"
            android:text="Limpar" />

        <Button
            android:id="@+id/buttonTelaCalcPesoCalcular"
            android:textColor="#defff2"
            android:fontFamily="sans-serif-black"
            android:textSize="18dp"
            android:backgroundTint="#0ff4c6"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Calcular" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewPesoDisplay"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="#defff2"
        android:fontFamily="sans-serif-black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PESO AQUI" />

    <Button
        android:id="@+id/buttonTelaCalcPesoVoltar"
        android:layout_marginTop="10dp"
        android:textColor="#defff2"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="#464f51"
        android:layout_marginBottom="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar" />

</LinearLayout>